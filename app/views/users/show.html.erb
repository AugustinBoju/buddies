
  <%= link_to "Back to index", users_path %>

  <div class="user-index-banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path 'background.jpg' %>);">
    <div class="banner-content">
        <div class="banner-content-text">
        <h2><%= @user.first_name %> <%= @user.last_name %> <strong><%= @user.age %></strong></h2>
        <p><%= @user.current_city %></p>
      </div>
      <div><%= image_tag @user.picture, class: "avatar" %></div>
    </div>
  </div>

  <div class="user-card">
    <br>

    <div class="kbd-flex">
      <p><kbd><%= "#{@user.interests.join(', ').downcase}"%><kbd></p>
      <br>
    </div>


    <h1> Description </h1>
    <i><%= @user.description %></i>
    <br>
    <p class="card-text"><small class="text-muted">Updated in January 2017</small></p>

    <h1> Travel stories </h1>

    <div class="travel-stories">
     <div class="travel-stories-left" style="background-image: url(<%= image_path 'apo_travel.jpg' %>);">

      </div>
      <div class="travel-stories-right">
        <h2> Argentina</h2>
        <p>Aug 1, 2016 â€” Oct 1, 2016</p>
      </div>

    </div>

    <div class="button-request">
      <% if user_signed_in?  && @receive_notication %>
        <%= render 'requests/notifications/index', requests: current_user.requests %>
      <% elsif user_signed_in? && @send_request %>
        <%= render 'requests/requests/index', requests: current_user.requests %>
      <% else %>
        <%= render 'requests/new', user: @user, request: @request %>
      <% end %>
      <br>
    </div>
  </div>


