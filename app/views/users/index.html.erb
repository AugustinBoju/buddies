<div class="wrapper padded">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-md-6">
        <div class="container_style">
          <div class="text-center">
            <h1 class="titles">BUDDIES WHO LOOK LIKE ME</h1>
            <h2 class="titles"><kbd>I love: </kbd></h2>
            <p><%= "#{@interests.pluck(:name).join(', ').downcase}"%></p>
            <p><%= link_to 'Edit interests', root_path%></p>
          </div>
        </div>
        <div class="card-users-listing">
          <div class="row">
            <% @users.each do |user| %>
              <div class="col-xs-12 col-md-6">
                <%= render "test-card", user: user %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-md-6">
        <div id="map" style="width: 100%; height: 600px;"></div>
      </div>
      <% content_for(:after_js) do %>
        <script>
          $(document).ready(function() {
            var handler = Gmaps.build('Google');
            handler.buildMap({ internal: { id: 'map' }, provider: { scrollwheel: false } }, function() {
              markers = handler.addMarkers(<%= raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              if (markers.length == 0) {
                handler.getMap().setZoom(2);
              } else if (markers.length == 1) {
                handler.getMap().setZoom(14);
              }
            });
          });
        </script>
      <% end %>
    </div>
  </div>
</div>


