<div class="form text-center">
      <%= form_for [@conversation, @new_message], remote: true do |f| %>
          <%= f.text_area :body, class: "text-area" %>
          <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
          <br>
          <%= f.submit "Send", class: "btn btn-info" %>
          <br>
          <br>
      <% end %>
</div>
